<section class='hero is-fullheight is-primary'>
  <div class='hero-body'>
    <div class='container has-text-centered'>
      <div class='columns is-centered'>
        <div class='column is-full'>
          <h1 class='title'>Working On</h1>
          <div class='field'>
            {{#if working.length}}
            {{#each working as |working|}}
              <a class='project-details' data-id='{{working.id}}'>{{working.title}}</a>
              <h4>{{working.description}}</h4>
              {{> modal}}
            {{/each}}
            {{/if}}
          </div>
          <div class='field'>
            <div class='control'>
              <button class='button is-primary add-button add-project-button'>Add new Project</button>
            </div>
          </div>
          <div class='buttons is-centered mt-5'>
            <a href='/dashboard' class='button is-success dashboard-button'>Dashboard</a>
            <a href='/todo' class='button is-info todo-button'>To-Do</a>
            <a href='/completed' class='button is-info completed-button'>Completed</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="./js/working.js"></script>
<script src="./js/timeTrack.js"></script>