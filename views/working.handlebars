<section class='hero is-fullheight is-primary'>
  <div class='hero-body'>
    <div class='container has-text-centered'>
      <div class='columns is-centered'>
        <div class='column is-full'>
          <!-- Apply bounceInLeft animation to the h1 element -->
          <h1 class='title animate__animated animate__bounceInLeft'>Working</h1>
          <div class='field'>
            {{#if workings.length}}
              {{#each workings as |working|}}
                <div class='working-item'>
                  <div class="project-details">
                    <a href='/working/{{working.id}}'>{{working.title}}</a>
                    <h4>{{working.description}}</h4>
                  </div>
                  <div class='time-adjustment'>
                    <div class='time-display'>
                      <p>Time Spent: {{time_applied}} minutes</p>
                    </div>
                  </div>
                </div>
              {{/each}}
            {{else}}
              <p>Currently working on none.</p>
            {{/if}}
            {{> modal}}
          </div>
          <div class='field'>
            <div class='control'>
              <button class='button is-primary add-button add-project-button' data-page='working' data-id='{{working.id}}'>Add new Project</button>
            </div>
          </div>
          <div class='buttons is-centered mt-5'>
            <a href='/dashboard' class='button dashboard-button'>Dashboard</a>
            <a href='/completed' class='button completed-button'>Completed</a>
            <a href='/todo' class='button todo-button'>To-Do</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="./js/timeTrack.js"></script>
