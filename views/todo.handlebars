<!-- Section for displaying the To-Do list -->
<section class='hero is-fullheight is-primary'>
  <div class='hero-body'>
    <div class='container has-text-centered'>
      <div class='columns is-centered'>
        <div class='column is-full'>
          <!-- Title -->
          <h1 class='title'>To-Do</h1>
          <div class='field'>
            <!-- Check if there are any To-Do items -->
            {{#if todos.length}}
            <!-- Loop through each To-Do item -->
            {{#each todos as |todo|}}
            <div class='todo-item'>
              <!-- Display the title and description -->
              <a href='/todo/{{todo.id}}'>{{todo.title}}</a>
              <h4>{{todo.description}}</h4>
              <div class='time-adjustment'>
                <!-- Display the time spent -->
                <p>Time Spent:{{todo.time_applied}}</p>
                <!-- Display the timer -->
                <div class='time-display'>
                  <p><span class='project-time' id="timerDisplay_{{todo.id}}">00:00:00</span></p>
                </div>
                <!-- Buttons for controlling the timer -->
                <div class="button-container">
                  <button class="startButton" data-todoId="{{todo.id}}">Start</button>
                  <button class="stopButton" data-todoId="{{todo.id}}">Stop</button>
                  <button class="resetButton" data-todoId="{{todo.id}}">Reset</button>
                </div>
              </div>
              <div class='control-buttons'>
                <i class='fas fa-arrow-up increase-hour'></i>
                <i class='fas fa-arrow-down decrease-hour'></i>
                <div class='delete-button'>
                </div>
              </div>
            </div>
            {{/each}}
            <!-- If there are no To-Do items, display a message -->
            {{else}}
            <p>No to-dos yet.</p>
            {{/if}}
            {{!-- modal for adding new project --}}
            {{> modal}}
          </div>
          <!-- Button to add a new project -->
          <div class='field'>
            <div class='control'>
              <button class='button is-primary add-button add-project-button' data-page='todo' data-id='{{todo.id}}'>Add
                new Project</button>
            </div>
          </div>
          <!-- Navigation buttons -->
          <div class='buttons is-centered mt-5'>
            <a href='/dashboard' class='button is-success dashboard-button'>Dashboard</a>
            <a href='/working' class='button is-info working-button'>Working</a>
            <a href='/completed' class='button is-info completed-button'>Completed</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Scripts for handling To-Do functionality -->
<script src="./js/todo.js"></script>
<script src="./js/timeTrack.js"></script>
