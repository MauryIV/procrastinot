<section class='hero is-fullheight is-primary'>
  <div class='hero-body'>
    <div class='container has-text-centered'>
      <div class='columns is-centered'>
        <div class='column is-half'>
          <h1 class='title'>Compelted Projects</h1>
          <div class='field'>
            {{#if completed.length}}
            {{#each completed as |completed|}}
              <h4><a href='/completed/{{completed.id}}'>{{completed.title}}</a></h4>
            {{/each}}
            {{/if}}
          </div>
          <div class='field'>
            <div class='control'>
              <a href='/new-project' class='button is-primary add-button'>Add new Project</a>
            </div>
          </div>
          <div class='buttons is-centered mt-5'>
            <a href='/dashboard' class='button is-success dashboard-button'>Dashboard</a>
            <a href='/working' class='button is-info working-button'>Working</a>
            <a href='/todo' class='button is-info to-do-button'>To-Do</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
