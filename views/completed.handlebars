
<section class='hero is-fullheight is-primary'>
  <div class='hero-body'>
    <div class='container has-text-centered'>
      <div class='columns is-centered'>
        <div class='column is-full'>
          <h1 class='title'>Completed</h1>
          <div class='field'>
            {{#if completed.length}}
              {{#each completed as |completed|}}
                <div class='completed-item'>
                  <a class='project-details' data-id='{{completed.id}}'>{{completed.title}}</a>
                  <h4>{{completed.description}}</h4>
                  <div class='time-adjustment'>
                    <p>Time Spent:</p>
                    <div class='time-display'>
                      <p><span class='project-time' id="timerDisplay_{{completed.id}}"></span></p>
                    </div>
                    <button id='startButton_{{completed.id}}'>Start</button>
                    <button id='stopButton_{{completed.id}}'>Stop</button>
                    <button id="resetButton_{{completed.id}}">Reset</button>
                    <div class='control-buttons'>
                      <i class='fas fa-arrow-up increase-hour'></i>
                      <i class='fas fa-arrow-down decrease-hour'></i>
                      <div class='delete-button'>                 
                      </div>
                    </div>
                  </div>
                </div>
                {{> modal}}
              {{/each}}
            {{else}}
              <p>No completed projects found.</p>
            {{/if}}
          </div>
          <div class='field'>
            <div class='control'>
              <button class='button is-primary add-button add-project-button'>Add new Project</button>
            </div>
          </div>
          <div class='buttons is-centered mt-5'>
            <a href='/dashboard' class='button is-success dashboard-button'>Dashboard</a>
            <a href='/working' class='button is-info working-button'>Working</a>
            <a href='/todo' class='button is-info todo-button'>To-Do</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="./js/completed.js"></script>
<script src="./js/timeTrack.js"></script>